<!DOCTYPE html>
<html lang="en">

<body class="container">
  <%- include('./partials/head.ejs')%>

  <%- include('./partials/nav.ejs') %>

  <div class="blog content">
    <h2>All Blogs</h2>
    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
       <p><%= blog.title %></p>
       <blockquote>
         <p><%= blog.snippet %></p>
       </blockquote>
      <% }) %>
    <% } else { %>
      <p> There are no blogs to display</p>
      <% } %>
  </div>
  
  <%- include('./partials/footer.ejs') %>

</body>
</html>